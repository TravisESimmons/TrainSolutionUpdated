<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrainWebApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrainWebApp.styles.css" asp-append-version="true" />

    <link rel="ICON" href="~/img/Thomas_the_Dank_Engine.icon" type="image/icon" />
</head>
<body>
    <header>
        <nav>
            <div>
                <ul>
                <li>
                    <a asp-area="" asp-page="/Index">
                        <img src="~/img/Thomas-The-Mad-Engine.jpg" alt="Logo Image" title="Contact Us" width="80" height="80" />
                    </a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/Index"> Home</a>
                    </li>

                    <li>
                        <a asp-area="" asp-page="/Contact"> Contact Us</a>
                    </li>

                    <li>
                        <a asp-area="" asp-page="/Query"> Query</a>
                    </li>
  
                    <li>
                        <a asp-area="" asp-page="/About"> About Us</a>
                    </li>

                    <li>
                        <a asp-area="" asp-page="/Privacy"> Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main> 
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; Travis Simmons 2022 - TrainWatch - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>